            <string>switch state{
    case 0://fade in
        with objPlayer{frozen = 1;}
        frontA = max(frontA - 1/50, 0);
        if frontA == 0{state = 1;with oDialogHandle{diaStart(91);}}
    break;
    case 1://in intro
        if scrButtonCheckPressed(global.skipButton){
            audio_sound_gain(global.currentMusic,0,1000);
            state = 4;
            drawBlack = 1;
            scrPlaySoundExt(sndSelectMade,.75,1,false);
            with oDialogHandle{diaState = 0;}
        }
    break;
