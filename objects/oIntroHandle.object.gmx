        t = min(t+1,75);
        blackA = min(blackA+1/50,1);
        if t == 50{scrStopMusic();}
        if t == 75{
            with objPlayer{instance_destroy();}
            instance_create(0,0,oIntroTransition);
            room_goto(rMainHub);
        }
    break;
}
